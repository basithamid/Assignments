package com.hibernate.mapping;

import javax.persistence.*;

@Entity
@Table(name="Customer")
public class Customer {
	@Id
	@GeneratedValue
	@Column(name="c_id")
	private int id;
	
	@Column(name="c_name")
	private String name;
	
	@OneToOne(cascade={CascadeType.PERSIST}, fetch=FetchType.EAGER)
	@JoinColumn(name="address_id")
	private Address address;
	
}
