	public void login(String userName, String password){
		List<User> userLogin = (List<User>)getHibernateTemplate().find("from User where userName =? AND password=?", userName,password);
		
		if(userLogin.isEmpty()){
			return null;
		}
		System.out.println("login details"+ userLogin);
		
//		List<UserCollection> users = userRepository.validate(user.getUname(), user.getPwd());
//		System.out.println("User details:"+user);
		if(userLogin!=null){
			UserSession userSession = new UserSession(userName, password);
			getHibernateTemplate().save(userSession);
//			SessionCollection session = new SessionCollection();
//			session.setUname(((User) userLogin).getUserName());
//			DateFormat dateFormat = new SimpleDateFormat("yyyy/MM/dd HH:mm:ss");
//			Date date = new Date();
//			session.setLastUpdatedDate(dateFormat.format(date));
//			
//			
//			return session;
		}
		return null;
//		
	}
