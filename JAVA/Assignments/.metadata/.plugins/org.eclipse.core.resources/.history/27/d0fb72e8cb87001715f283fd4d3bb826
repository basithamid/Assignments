import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


@WebServlet(value="/controller")
public class Controller extends HttpServlet{
	
	public void doGet(HttpServletRequest request, HttpServletResponse response)throws IOException, ServletException{
		String forward = request.getParameter("forward");
		RequestDispatcher rd = null;
		if(forward.equals("auth")){
			rd = request.getRequestDispatcher("controller?forward=login");
		}
		else if(forward.equals("login")){
			rd = request.getRequestDispatcher("controller?forward=welcome");
		}
		else if(forward.equals("computerbooks")){
			rd = request.getRequestDispatcher("/computer");
		}
		rd.forward(request, response);
	}
}
